<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


   <TextView
       android:id="@+id/textView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="12dp"
       android:layout_marginEnd="12dp"
       android:layout_marginBottom="36dp"
       android:text="@string/log_inn"
       android:textSize="36sp"
       android:textStyle="bold"
       app:layout_constraintBottom_toTopOf="@+id/imageView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />

   <EditText
       android:id="@+id/username"
       android:layout_width="350dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="35dp"
       android:ems="10"
       android:hint="@string/username"
       android:inputType="textPersonName"
       android:textColorHint="#1C1D27"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/imageView"
       android:autofillHints="" />

   <EditText
       android:id="@+id/editTextTextPassword"
       android:layout_width="350dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="8dp"
       android:ems="10"
       android:hint="@string/passward"
       android:inputType="textPassword"
       android:textColorHint="#3E3E3E"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/username"
       android:autofillHints="" />

   <ImageView
       android:id="@+id/imageView"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_marginTop="125dp"
       android:contentDescription="@string/logincon"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.498"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:srcCompat="@drawable/log" />

   <Button
       android:id="@+id/login"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="32dp"
       android:text="@string/log_in"
       android:textColor="#0C0C0C"
       app:backgroundTint="#FFBF00"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
       app:rippleColor="#040404"
       app:strokeColor="#000000"
       />


</androidx.constraintlayout.widget.ConstraintLayout>